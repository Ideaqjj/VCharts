<?xml version="1.0" encoding="utf-8"?>
<resources>


    <declare-styleable name="DiagramView">
        <attr name="content" format="string|reference" />
        <attr name="contentSize" format="dimension" />
        <attr name="contentMargin" format="dimension" />
        <attr name="contentColor" format="color" />
        <attr name="viewColor" format="color" />
        <attr name="viewSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="DiagramViewFlowLayout">
        <attr name="spaceHorizontal" format="dimension" />
        <attr name="spaceVertical" format="dimension" />
    </declare-styleable>

    <declare-styleable name="TagFlowLayout">
        <attr name="gravity">
            <enum name="left" value="-1" />
            <enum name="center" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="AbsBarChart">
        <attr name="barTitleMargin" format="dimension" />
        <attr name="showGraduation" format="boolean" />
        <attr name="barWidth" format="dimension" />
        <attr name="gradutionTextSize" format="dimension" />
        <attr name="gradutaionColor" format="color" />
        <attr name="titleColor" format="color" />
        <attr name="titleTextSize" format="dimension" />
        <attr name="barTextSize" format="dimension" />
        <attr name="gradutaionLineWidth" format="dimension" />
        <attr name="density" format="integer" />
        <attr name="min" format="integer" />
        <attr name="max" format="integer" />
    </declare-styleable>

    <declare-styleable name="LineChart">
        <attr name="lineGradutionTextSize" format="dimension" />
        <attr name="lineGradutaionColor" format="color" />
        <attr name="lineTitleColor" format="color" />
        <attr name="lineTitleTextSize" format="dimension" />
        <attr name="lineGradutaionLineWidth" format="dimension" />
        <attr name="linedensity" format="integer" />
        <attr name="lineMin" format="float" />
        <attr name="lineMax" format="float" />
    </declare-styleable>
</resources>